<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_product_cart__img__image_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_product_cart__lbl__name_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:hint="@string/name_product"
        app:layout_constraintStart_toEndOf="@id/item_product_cart__img__image_product"
        app:layout_constraintTop_toTopOf="@id/item_product_cart__img__image_product" />

    <TextView
        android:id="@+id/item_product_cart__lbl__price_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/price_product"
        app:layout_constraintStart_toEndOf="@id/item_product_cart__img__image_product"
        app:layout_constraintTop_toBottomOf="@id/item_product_cart__lbl__name_producto" />

    <TextView
        android:id="@+id/item_product_cart__lbl_precio_cabecera"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:text="â‚¬"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/item_product_cart__lbl__price_producto"
        app:layout_constraintStart_toEndOf="@id/item_product_cart__lbl__price_producto" />

    <TextView
        android:id="@+id/item_product_cart__lbl__cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Cantidad: 1"
        app:layout_constraintBottom_toBottomOf="@+id/item_product_cart__img__image_product"
        app:layout_constraintStart_toEndOf="@id/item_product_cart__img__image_product"
        app:layout_constraintTop_toBottomOf="@id/item_product_cart__lbl__price_producto" />

</androidx.constraintlayout.widget.ConstraintLayout>