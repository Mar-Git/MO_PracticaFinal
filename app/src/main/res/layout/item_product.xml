<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_login__img__image_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_login__lbl__name_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:hint="@string/name_product"
        app:layout_constraintStart_toEndOf="@id/item_login__img__image_product"
        app:layout_constraintTop_toTopOf="@+id/item_login__img__image_product" />

    <TextView
        android:id="@+id/item_login__lbl__price_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:hint="@string/price_product"
        app:layout_constraintStart_toEndOf="@+id/item_login__img__image_product"
        app:layout_constraintTop_toBottomOf="@+id/item_login__lbl__name_producto" />

</androidx.constraintlayout.widget.ConstraintLayout>